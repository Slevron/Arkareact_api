{
   "compilerOptions": {
      "baseUrl": "./src",
      "lib": [
         "es5",
         "es6",
         "DOM"
      ],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "sourceRoot": "src",
      "typeRoots" : ["./node_modules/@types", "./typings"]
   },
   "exclude": [
      "node_modules",
      "build"
   ]
}
